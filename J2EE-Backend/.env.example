# ==================================
# DATABASE CONFIGURATION
# ==================================
# Database connection URL
DB_URL=jdbc:mysql://localhost:3306/datvemaybay?useSSL=false&serverTimezone=Asia/Ho_Chi_Minh&allowPublicKeyRetrieval=true

# Database credentials
DB_USERNAME=root
DB_PASSWORD=your_database_password

# ==================================
# JWT CONFIGURATION
# ==================================
# Secret key for JWT token generation (use a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# JWT expiration times (in milliseconds)
JWT_ACCESS_EXPIRATION=2592000000
JWT_REFRESH_EXPIRATION=2592000000

# ==================================
# AIRPORTDB API CONFIGURATION
# ==================================
# API key for AirportDB service
AIRPORTDB_API_KEY=your_airportdb_api_key_here

# ==================================
# OPENROUTER API CONFIGURATION
# ==================================
# OpenRouter API Key - Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter base URL
OPENROUTER_BASE_URL=https://openrouter.ai/api

# Model configuration
OPENROUTER_MODEL=tngtech/tng-r1t-chimera:free
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_MAX_TOKENS=4096

# ==================================
# GOOGLE OAUTH2 CONFIGURATION
# ==================================
# You need to create OAuth2 credentials at: https://console.cloud.google.com/
# 1. Create a new project or select existing project
# 2. Go to "APIs & Services" > "Credentials"
# 3. Create "OAuth 2.0 Client IDs"
# 4. Authorized redirect URIs: {baseUrl}/login/oauth2/code/google
#    Local: http://localhost:8080/api/login/oauth2/code/google

GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here

# ==================================
# EMAIL CONFIGURATION (Gmail)
# ==================================
# To use Gmail for sending emails, you need:
# 1. Enable 2-Step Verification for Gmail
# 2. Create App Password at: https://myaccount.google.com/apppasswords
# 3. Use the App Password instead of regular Gmail password

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here

# SMTP properties
EMAIL_SMTP_AUTH=true
EMAIL_SMTP_STARTTLS_ENABLE=true
EMAIL_SMTP_STARTTLS_REQUIRED=true
EMAIL_SMTP_CONNECTIONTIMEOUT=5000
EMAIL_SMTP_TIMEOUT=5000
EMAIL_SMTP_WRITETIMEOUT=5000

# ==================================
# VNPAY PAYMENT CONFIGURATION
# ==================================
# VNPay Sandbox Configuration
# To use VNPay, you need:
# 1. Register merchant account at: https://sandbox.vnpayment.vn/
# 2. Get TMN Code and Secret Key from merchant portal
# 3. Configure Return URL to receive callback from VNPay

VNPAY_TMN_CODE=your_vnpay_tmn_code_here
VNPAY_SECRET_KEY=your_vnpay_secret_key_here
VNPAY_PAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_API_URL=https://sandbox.vnpayment.vn/merchant_webapi/api/transaction
VNPAY_RETURN_URL=http://localhost:8080/api/vnpay/payment-callback
VNPAY_FRONTEND_URL=http://localhost:5173/vnpay-callback

# ==================================
# FRONTEND URL (dùng cho redirect OAuth2, email links, etc.)
# ==================================
FRONTEND_URL=http://localhost:5173

# ==================================
# CORS ALLOWED ORIGINS (phân cách bởi dấu phẩy)
# ==================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ==================================
# SERVER CONFIGURATION
# ==================================
# Server port (optional, defaults to 8080)
SERVER_PORT=8080
